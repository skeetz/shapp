<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ntnu.shapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ntnu.shapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ntnu.shapp.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name="com.ntnu.shapp.ShoppingActivity"
            android:label="@string/title_activity_shopping" >
        </activity>
        <activity
            android:name="com.ntnu.shapp.GoalActivity"
            android:label="@string/title_activity_goal" >
        </activity>

    </application>

</manifest>
